alias ~='cd ~'
alias cd..='cd ..'
alias ..='cd ..'
alias ...='cd ../../../'
alias ....='cd ../../../../'
alias .....='cd ../../../../'
alias .4='cd ../../../../'
alias .5='cd ../../../../..'

# Git
alias ga='git add'
alias gaa='git add -a'
alias gc='git commit -m'
alias gcb='git checkout -b'
alias gf='git fetch'
alias gl='git pull'
alias gp='git push'
alias gs='tig status'

# Docker
alias dcu='docker-compose up -d'
alias dcub='docker-compose up -d --build'
alias dcd='docker-compose down'
alias dca='docker ps -a'
alias drmex='docker rm $(docker ps -q -f status=exited)'
alias drmid='docker rmi $(docker images -f "dangling=true" -q)'
alias dsex="docker start $(docker ps -a --filter 'status=exited' -q)"

# Yarn
alias ya='yarn add'
alias yad='yarn add -D'
alias yr='yarn remove'

alias zshrc='vim ~/.zshrc'

alias l='ls -A1'
alias la='ls -lAh'
ls --color=auto &> /dev/null && alias ls='ls --color=auto'

update() {
    sudo apt update
    apt list --upgradable
    sudo apt upgrade
    sudo apt autoremove
    vim +PlugUpgrade +PlugUpdate +PlugClean +qall
    antigen update
    ~/.tmux/plugins/tpm/bin/update_plugins all
}
